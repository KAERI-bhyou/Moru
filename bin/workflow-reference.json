{
  "title": "Just Normal Calculation",
  "author": "Byung-Hyun You",
  "email": "bhyou@kaeri.re.kr",
  "description": "Test runs of SUBO experiment for both SPACE and CUPID code.",
  // "options": {
  //   "parallel": "4"
  // },
  "workflow": {},
  "jobs": [
    {
      "job_name": "space_runs",
      "code": "space",
      "inputs": [
        "subo_space"
      ],
      "restart": false,
      "workflow": "reference_run"
    },
    {
      "job_name": "cupid_runs",
      "code": "cupid",
      "inputs": [
        "subo_cupid_flow",
        "subo_cupid_grid"
      ],
      "restart": false,
      "workflow": "reference_run"
    }
    // {
    //   "job_name": "hybrid",
    //   "codes": [
    //     "space",
    //     "cupid"
    //   ],
    //   "input": "combined",
    //   "workflow": "reference_run",
    //   "coupling_method": "auto"
    // }
  ],
  "codes": [
    {
      "name": "space",
      "executable": "codes/space/space.exe",
      "dependencies": [
        // "codes/space/waterproperty.dat"
      ],
      "artifacts": [
        ""
      ],
      "np": 1
    },
    {
      "name": "cupid",
      "executable": "codes/cupid/cupid.exe",
      "dependencies": [
        "codes/cupid/tpfh2o"
      ],
      "np": 4
    }
  ],
  "inputs": [
    {
      "name": "subo_space",
      "file": "input/sample.in"
    },
    {
      "name": "subo_cupid_flow",
      "file": "input/somaFlow.in"
    },
    {
      "name": "subo_cupid_grid",
      "file": "input/somaGrid.in"
    }
  ],
  "artifacts": [
    {
      "name": "subo_space",
      "file": "input/sample.in"
    },
    {
      "name": "subo_cupid_flow",
      "file": "input/somaFlow.in"
    },
    {
      "name": "subo_cupid_grid",
      "file": "input/somaGrid.in"
    }
  ],
  "samplers": {
    "seed": "1234",
    "sample_number": "10",
    "distributions": [
      {
        "name": "uniform_1",
        "distribution": "uniform",
        "a": "0.99",
        "b": "1.0"
      },
      {
        "name": "uniform_2",
        "distribution": "uniform",
        "a": "1.1",
        "b": "1.0"
      },
      {
        "name": "manual_1",
        "distribution": "manual", // should be matched with sampling_number
        "values": [ 1.0, 1.1, 1.3, 1.4, 1.5, 1.6, 1.7, 1.8, 1.9, 2.0 ] // total 10
      }
    ]
  },
  "generators": [
    {
      "name": "flowrate", // 기존 parameter
      "sampler": "uniform_1",
      "reference": "subo_space",
      "locations": [
        {
          "line": "71",
          "column": "4, 6"
        },
        {
          "line": "72:78",
          "column": "4"
        }
      ],
      "expression": "*x"
    },
    {
      "name": "dial1", // 기존 parameter
      "sampler": "uniform_2",
      "reference": "subo_space",
      "locations": [
        {
          "line": "100",
          "column": "7"
        }
      ],
      "expression": "+(1.7*x)"
    }
  ],
  "extractors": [
    {
      "name": "extract_1",
      "locations": [
        {
          "skip_headers": "3",
          "line": "1, 4:10",
          "column": "1:100"
        }
      ]
    }
  ]
}