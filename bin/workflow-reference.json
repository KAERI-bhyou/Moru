  "jobs": [
    {
      "job_name": "space_runs",
      "codes": "space",
      "inputs": [
        "subo_space"
      ],
      "restart": false,
      "workflow": "reference_run"
    },
    {
      "job_name": "cupid_runs",
      "codes": "cupid",
      "inputs": [
        "subo_cupid_flow",
        "subo_cupid_grid"
      ],
      "restart": false,
      "workflow": "reference_run"
    },
    // {
    //   "job_name": "hybrid",
    //   "codes": [
    //     "space",
    //     "cupid"
    //   ],
    //   "input": "combined",
    //   "workflow": "reference_run",
    //   "coupling_method": "auto"
    // }
  ],
  "codes": [
    {
      "name": "space",
      "executable": "codes/space/space.exe",
      "dependencies": [
        "codes/space/waterproperty.dat"
      ],
      "np": 1
    },
    {
      "name": "cupid",
      "executable": "codes/cupid/cupid.exe",
      "dependencies": [
        "codes/cupid/tpfh2o"
      ],
      "np": 4
    }
  ],
  "inputs": [
    {
      "name": "subo_space",
      "file": "samples/space_input.in"
    },
    {
      "name": "subo_space_rst",
      "file": "samples/space_input.rst"
    },
    {
      "name": "subo_space_rst_out",
      "file": "samples/space_input.rst_out"
    },
    {
      "name": "subo_cupid_flow",
      "file": "samples/somaFlow.in"
    },
    {
      "name": "subo_cupid_grid",
      "file": "samples/somaGrid.in"
    }
  ],
  "modules": {
    "reference_run": {
      "1": "execution"
    }
  }
}